<Window x:Class="MessengerVK.MessageManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:MessengerVK.Helpers.Control"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:helpers="clr-namespace:MessengerVK.Helpers"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MessageManager"
        AllowDrop="True"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        WindowStyle="ThreeDBorderWindow"
        helpers:DialogCloser.DialogResult="{Binding CloseWindowFlag}"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <ListView Grid.Row="1"
                  Grid.RowSpan="3"
                  Grid.Column="0"
                  ItemsSource="{Binding Path=FriendsList}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  SelectedIndex="{Binding Path=IndexSelectedFriend,
                                          Mode=TwoWay}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding WriteMessage}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListView.View>
                <GridView AllowsColumnReorder="False">

                    <GridViewColumn>
                        <GridViewColumnHeader Visibility="Hidden" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image MinWidth="100"
                                       MaxHeight="100"
                                       Source="{Binding Path=Avatar}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="150" DisplayMemberBinding="{Binding Path=Name}">
                        <GridViewColumnHeader Visibility="Hidden" />
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Visibility="Hidden" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image MinWidth="16"
                                       MaxHeight="16"
                                       HorizontalAlignment="Right"
                                       Source="{Binding Path=OnlineIcon}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="1"
              Grid.RowSpan="2"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="15*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <WebBrowser Grid.Row="0" helpers:WebBrowserHelper.Body="{Binding Path=MyHtml}" />
            <Button Grid.Row="1"
                    Command="{Binding Refresh}"
                    Style="{StaticResource ButtonStyle}">
                Refresh
            </Button>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button Grid.Row="0"
                        Command="{Binding Path=SaveToWordFile}"
                        Content="Save"
                        Style="{StaticResource ButtonStyle}" />
                <Button Grid.Row="1"
                        Command="{Binding Path=DeleteWordFile}"
                        Content="Delete"
                        Style="{StaticResource ButtonStyle}" />
            </Grid>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="1">
            <control:TextBoxControl x:Name="TextBox" AcceptsReturn="False" />
        </Grid>
        <Grid Grid.Row="3" Grid.Column="2">
            <Button Command="{Binding Path=SendMessage}"
                    CommandParameter="{Binding ElementName=TextBox}"
                    Content="Send"
                    Style="{StaticResource ButtonStyle}" />
        </Grid>
    </Grid>
</Window>

